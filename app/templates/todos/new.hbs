<form id="new-todo">
<h1>New Task</h1>
{{input type="text" placeholder="title" value=titleValue}}
{{input type="textarea" placeholder="description" value=descriptionValue}}
{{input type="datetime-local" value=dateValue}}
<p>
<input type="submit" value="Add" {{action 'add'}} class="btn btn-success"/>
<input type="submit" value="Cancel" {{action 'cancel'}} class="btn btn-primary"/>
</p>
</form>